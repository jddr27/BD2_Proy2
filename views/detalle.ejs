<html lang="es">
    <head>
            <title>Detalle <%= res.idinvento %></title>
            <meta charset="utf-8">
            <meta name="viewport" content="width=device-width, initial-scale=1">
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
            <link rel="stylesheet" type="text/css" href="/static/tln.min.css"/>
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
            <script src="/static/prueba_js.js"></script>
            <style>    
              /* Set black background color, white text and some padding */
              nav {
                background-color: #555;
              }
          
              footer {
                background-color: #555;
                color: white;
                padding: 15px;
              }
              table {
                border-collapse: collapse;
                width: 100%;
               }

               th, td {
                text-align: left;
                padding: 8px;
               }

                tr:nth-child(even) {background-color: #f2f2f2;}
            </style>
    </head>
    
    <body>
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                <a class="navbar-brand" href="/">BD2</a>
                </div>
                <div class="collapse navbar-collapse" id="myNavbar">
                    <ul class="nav navbar-nav">
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="">Ingresar
                            <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="/nPate">Patentes</a></li>
                                <li><a href="/nCola">Colaboradores</a></li>
                                <li><a href="/nPais">Paises</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="">Listar inventos
                            <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="/lPais">Por pais</a></li>
                                <li><a href="/lInve">Por inventor</a></li>
                                <li><a href="/lArea">Por area</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <h3> Informacion general </h3> 
        <br>
        <table style="width: fit-content;">
            <tr>
                <th>ID</th>
                <td><%= res.idinvento %></td>
            </tr>
            <tr>
                <th>Titulo</th>
                <td><%= res.nombreinvento %></td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td><%= res.descripcion %></td>
            </tr>
            <tr>
                <th>Fecha de presentacion</th>
                <td><%= res.fechapresentacion %></td>
            </tr>
            <tr>
                <th>Pais</th>
                <td><%= res.idpais %></td>
            </tr>
        </table>

        <br>
        <hr>
        <br>
        
        <h3> Inventor(es) </h3> 
        <br>
        <table style="width: fit-content;">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
            </tr>
            <% for(var i=0; i< res.idautor.length; i++){ %>
            <tr>
                <td><%= res.idautor[i] %></td>
                <td><%= res.nombreautor[i] %></td> 
            </tr>
            <% } %>
        </table>

        <br>
        <hr>
        <br>

        <h3> Area(s) </h3> 
        <br>
        <table style="width: fit-content;">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
            </tr>
            <% for(var i=0; i< res.idarea.length; i++){ %>
            <tr>
                <td><%= res.idarea[i] %></td>
                <td><%= res.nombrearea[i] %></td> 
            </tr>
            <% } %>
        </table>

        <br>
        <hr>
        <br>

        <h3> Colaborador(es) </h3> 
        <br>
        <table style="width: fit-content;">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
            </tr>
            <% for(var i=0; i< res.idprofesional.length; i++){ %>
            <tr>
                <td><%= res.idprofesional[i] %></td>
                <td><%= res.nombreprofesional[i] %></td> 
            </tr>
            <% } %>
        </table>

    </body>
</html>