<html lang="es">
    <head>
            <title>Nueva patente</title>
            <meta charset="utf-8">
            <meta name="viewport" content="width=device-width, initial-scale=1">
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
            <link rel="stylesheet" type="text/css" href="/static/tln.min.css"/>
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
            <script src="/static/prueba_js.js"></script>
            <style>    
              /* Set black background color, white text and some padding */
              nav {
                background-color: #555;
              }
          
              footer {
                background-color: #555;
                color: white;
                padding: 15px;
              }
              table {
                border-collapse: collapse;
                width: 100%;
               }

               th, td {
                text-align: left;
                padding: 8px;
               }

                tr:nth-child(even) {background-color: #f2f2f2;}
            </style>
    </head>
    
    <body>
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                <a class="navbar-brand" href="/">BD2</a>
                </div>
                <div class="collapse navbar-collapse" id="myNavbar">
                    <ul class="nav navbar-nav">
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="">Ingresar
                            <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="/nCola">Colaboradores</a></li>
                                <li><a href="/nPais">Paises</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="">Listar inventos
                            <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="/lPais">Por pais</a></li>
                                <li><a href="/lInve">Por inventor</a></li>
                                <li><a href="/lArea">Por area</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <div id="container-1" align="center">
            <h3> Crear registro de patente </h3>
            <form action="/nuevaPate" method="POST" enctype="application/json">
                <div>
                    <label>Fecha</label>
                    <input type="date" id="nFecha" name="nFecha">
                </div>
                <div>
                    <label>Email</label>
                    <input type="email" id="nEmail" name="nEmail">
                </div>
                <div>
                    <label>Titulo</label>
                    <textarea id="nTitulo" name="nTitulo" rows="1" cols="50"> </textarea>
                </div>
                <div>
                    <label>Descripcion</label>
                    <textarea id="nDescri" name="nDescri" rows="5" cols="50"> </textarea>
                </div>
                <input type="submit" id="btnCrear" value="Crear">
            </form>

            <label><%= consola %> </label>

        </div>
    </body>
</html>